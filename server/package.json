{
  "name": "construction-marketplace-backend",
  "version": "1.0.0",
  "description": "Backend for Construction Marketplace (Express + MongoDB + JWT + Multer + Cloudinary)",
  "license": "MIT",
  "main": "index.js",
  "type": "module",
  "engines": {
    "node": "20.x",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "nodemon index.js",
    "start": "node --max-old-space-size=400 --expose-gc index.js",
    "render-build": "npm ci --prefer-offline --no-audit --no-fund --silent",
    "render-start": "node --max-old-space-size=400 --expose-gc --unhandled-rejections=strict index.js",
    "health-check": "curl -f http://localhost:${PORT:-4000}/health || exit 1",
    "test": "node test-before-deploy.js",
    "predeployment-test": "node test-before-deploy.js"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.7.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-validator": "^7.2.1",
    "express-rate-limit": "^7.4.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.6.3",
    "morgan": "^1.10.0",
    "multer": "^2.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.0"
  }
}

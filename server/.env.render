# Environment variables for Render deployment
NODE_ENV=production
PORT=10000

# Memory and Performance Settings
NODE_OPTIONS=--max-old-space-size=400 --expose-gc --unhandled-rejections=strict

# CORS Settings
ALLOWED_ORIGINS=https://construction-marketplace-1.onrender.com,https://construction-front-end.vercel.app
ALLOW_ALL_ORIGINS=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=1000

# Database (set these in Render dashboard)
# MONGO_URI=
# JWT_SECRET=
# CLOUDINARY_URL=
# CLOUDINARY_CLOUD_NAME=
# CLOUDINARY_API_KEY=
# CLOUDINARY_API_SECRET=

# Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Health Check
HEALTH_CHECK_INTERVAL=60000

# Performance
ENABLE_COMPRESSION=true
TRUST_PROXY=true
